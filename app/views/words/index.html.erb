<h1>つぶやき一覧</h1>
<p><%= notice %></p>

<%= link_to 'つぶやく', new_word_path %>

<table>
  <tr>
    <th>つぶやき一覧</th>
  </tr>

<% @words.each do |word| %>
  <tr>
    <td><%= word.content %></td>
    <td><%= link_to 'つぶやきを表示', word_path(word.id) %></td>
    <td><%= link_to "つぶやきを編集", edit_word_path(word.id), data: { confirm: '本当に編集していいですか？' } %></td>
    <td><%= link_to 'つぶやきを削除', word_path(word.id), method: :delete, data: { confirm: '本当に削除していいですか？' } %></td>
  </tr>
<% end %>
</table>